@model p1_2.Models.Customer

@{
  ViewData["Title"] = "Login";
  ViewData["IsLoggedIn"] = "false";
}

<div class="row justify-content-center mt-5 w-100">
  <div class="col-3">
    <div class="text-center mb-4">
      <h1 class="display-4 mb-2 font-weight-normal text-white">Login</h1>
    </div>
    <form class="form-signin px-5" asp-action="LoginCustomer">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <input type="text" asp-for="UserName" class="form-control text-center my-3" placeholder="Username" required autofocus>
        <span asp-validation-for="UserName" class="text-danger"></span>
      </div>

      <div class="form-group">
        <input type="password" asp-for="Password" class="form-control text-center my-3" placeholder="Password" required>
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>

      <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login" />
      </div>
      <div>
        <small class="text-white">No Account?</small>
        <a asp-action="Signup">Signup here</a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
