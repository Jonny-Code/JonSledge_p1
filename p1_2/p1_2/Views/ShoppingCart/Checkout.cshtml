@model p1_2.Models.CheckoutView

@{
  ViewData["Title"] = "Checkout";
}


<div class="container-fluid pt-2">
  <div class="row">
    <div class="col pb-2">
      <h4 class="text-center text-light pt-3 pb-3">
        Checkout items
        <span class="badge badge-success">@Model.ShoppingCarts.Count()</span>
      </h4>
      <div class="container">
        <div class="row pt-2">
          <div class="col p-2 ml-2 mr-2 text-center d-flex justify-content-center">

            @foreach (var item in Model.ShoppingCarts)
            {
              <div class="card mx-3 shadow-lg"
                   style="max-width: 12rem; max-height: 15rem;">
                <div class="card-body pl-2 pr-2">
                  <h6 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h6>
                  <h5 class="text-success mt-1 pt-1 pb-1 text-dark">
                    <span class="text-success">
                      <small>Price:&nbsp;&nbsp;</small>
                      @Html.DisplayFor(modelItem => item.Price)
                    </span>
                  </h5>
                </div>
              </div>

            }
          </div>
        </div>
      </div>
      <div class="container">

        <form asp-action="PlaceOrder">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-row">
            <div class="form-group col-md-8">
              <label class="text-light" for="inputMailingAddress">Address</label>
              <input type="text"
                     asp-for="CustomerAddress.StreetAddress"
                     class="form-control"
                     id="inputAddress"
                     placeholder="1234 Main St"
                     name="StreetAddress" />
            </div>
            <div class="form-group col-md-4">
              <label class="text-light" for="inputMailingAddress">Country</label>
              <input type="text"
                     asp-for="CustomerAddress.Country"
                     class="form-control"
                     id="inputAddress"
                     placeholder="Country"
                     name="Country" />
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label class="text-light" for="inputCity">City</label>
              <input type="text"
                     asp-for="CustomerAddress.City"
                     class="form-control"
                     id="inputCity"
                     name="City" />
            </div>
            <div class="form-group col-md-4">
              <label class="text-light" for="inputState">State</label>
              <input type="text"
                     asp-for="CustomerAddress.State"
                     class="form-control"
                     id="inputState"
                     name="State" />
            </div>
            <div class="form-group col-md-2">
              <label class="text-light" for="inputZip">Zip</label>
              <input type="text"
                     asp-for="CustomerAddress.ZIP"
                     class="form-control"
                     id="inputZip"
                     name="zip" />
            </div>
          </div>

          <div class="row">
            <div class="col d-flex justify-content-between">
              <button type="submit" class="btn btn-success pb-1">
                <h6>Purchase</h6>
              </button>
              <h3 class="text-light">
                Total:
                <span class="text-success">@ViewData["CheckoutTotal"]</span>
              </h3>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<style>
  .a-none, .a-none:hover, .a-none:focus, .a-none:active {
    text-decoration: none;
    color: inherit;
  }

  .a-none {
    color: inherit;
  }

    .a-none a {
      text-decoration: none;
      color: inherit;
    }

  .hover:hover {
    transition: all 0.1s ease-in;
    transform: scale(1.02);
  }

  .hover:active {
    transition: all 0.1s ease-out;
    transform: scale(1.01);
  }

    .hover:active::after {
      transition: all 0.1s ease-in;
      transform: scale(1.1);
    }
</style>

