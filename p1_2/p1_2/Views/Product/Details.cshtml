@model p1_2.Models.ProductView

@{
  ViewData["Title"] = "Details";
}

<div class="container">
  <h1 class="text-center text-light display-4">
    Product Details
  </h1>

  <div class="jumbotron bg-dark border border-secondary rounded shadow py-3 text-center">
    <h1 class="text-light">@Html.DisplayFor(model => model.Title)</h1>
    <h3 class="text-light">@Html.DisplayFor(model => model.Author)</h3>
    <p class="lead text-light"> @Html.DisplayFor(model => model.Description)</p>

    <div class="row justify-content-center">
      <div class="col-3 p-0">
        <h2 class="my-2 d-flex text-light justify-content-md-between">
          Price
          <span class="badge badge-success">
            $@Html.DisplayFor(model => model.Price)
          </span>
          <span class="badge badge-info">
            Stock @Html.DisplayFor(model => model.Amount)
          </span>
        </h2>
      </div>
    </div>


    <hr class="my-4 bg-secondary">
    @if (Model.Amount == 0)
    {
      <button class="btn btn-secondary btn-lg a-none" type="submit" disabled>Out of stock</button>
    }
    else if (Model.IsInCart)
    {
      <button class="btn btn-secondary btn-lg a-none" type="submit" disabled>In Cart</button>
    }
    else
    {
      <button class="btn btn-success btn-lg a-none" type="submit">@Html.ActionLink("Add To Cart", "AddToCart", "Product", @Model)</button>
    }
  </div>
</div>

<style>
  .a-none, .a-none:hover, .a-none:focus, .a-none:active {
    text-decoration: none;
    color: inherit;
  }

  .a-none {
    color: inherit;
  }

    .a-none a {
      text-decoration: none;
      color: inherit;
    }

  .hover:hover {
    transition: all 0.1s ease-in;
    transform: scale(1.02);
  }

  .hover:active {
    transition: all 0.1s ease-out;
    transform: scale(1.01);
  }

    .hover:active::after {
      transition: all 0.1s ease-in;
      transform: scale(1.1);
    }
</style>

